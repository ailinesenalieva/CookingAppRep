<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <!--scrollview aus https://stackoverflow.com/questions/55495460/how-do-i-make-a-relativelayout-scrollable-->
    <RelativeLayout
        android:id="@+id/resultslayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

    <LinearLayout
        android:id="@+id/resultsLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/backtobrowse"
        android:text="@string/backtobrowse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/resultsLayout"
        android:layout_marginTop="16dp" />


    <LinearLayout
        android:id="@+id/navigation"
        style="?android:attr/buttonBarStyle"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/backtobrowse"
        android:layout_marginTop="750dp"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/backhome"
            android:text="@string/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp" />

        <Button
            android:id="@+id/backprofile"
            android:text="@string/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        </LinearLayout>
    </RelativeLayout>
</ScrollView>